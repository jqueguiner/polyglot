FROM ubuntu:18.04

RUN apt-get update && apt-get install -y \
	libpq-dev \
	less \
	curl \
	wget \
	vim \
        python3 \
        python3-pip


ENV LC_ALL C.UTF-8
ENV LANG C.UTF-8


ENV WORKSPACE /workspace

WORKDIR $WORKSPACE

COPY ./monitoring/ $WORKSPACE

RUN pip3 install -r $WORKSPACE/requirements.txt

ENV CONFIG_FILE_PATH $WORKSPACE/config.yml

EXPOSE 5000

CMD flask run --host=0.0.0.0
